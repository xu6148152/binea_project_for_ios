kernel vec4 distort(sampler image, vec2 imageSize, sampler lookup, float padding)
{
	vec2 p = destCoord();
	vec4 lookupValue = sample(lookup, samplerTransform(lookup, vec2(0.0, p.y)));
p.x += lookupValue.x * 256.0 - padding;
return sample(image, samplerTransform(image, p));
